# Polymarket Agent Configuration

# Database
DATABASE_PATH=./data/polymarket.db

# Gamma API (https://gamma-api.polymarket.com)
GAMMA_API_BASE_URL=https://gamma-api.polymarket.com

# CLOB API (https://clob.polymarket.com)
CLOB_API_BASE_URL=https://clob.polymarket.com

# CLOB Authentication (Polymarket API)
# Get these from: https://polymarket.com/settings/api
CLOB_API_KEY=
CLOB_SECRET=
CLOB_PASSPHRASE=

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Agent Configuration
WATCHER_INTERVAL_MS=60000
SCAN_BATCH_SIZE=100
MAX_POSITIONS=10
